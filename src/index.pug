doctype html
html
    head
        title Demo
        base(href='/')
        meta(charset='UTF-8')
        script(src='node_modules/systemjs/dist/system.src.js')
        script(src='systemjs.config.js')
        script.
            System.import('main.js').catch(function(err){console.error(err.message);});
        style.
            .active { color: blue; font-weight: bold; }
            .menu a + a { margin-left: 8px; }
    body(ng-cloak)
        .menu
            a(ui-sref='main', ui-sref-active='active') main
            a(ui-sref='customers', ui-sref-active='active') customers
        ui-view
